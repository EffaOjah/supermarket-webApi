<script>
	// Auto-fill current value with purchase price if not provided
	document.getElementById('purchasePrice').addEventListener('input', function() {
		const currentValueInput = document.getElementById('currentValue');
		if (!currentValueInput.value) {
			currentValueInput.placeholder = this.value;
		}
	});
	
	// Set max date for purchase date to today
	const today = new Date().toISOString().split('T')[0];
	document.getElementById('purchaseDate').setAttribute('max', today);
</script>


<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>MaryBill - Manage requests</title>
    <meta
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no"
      name="viewport"
    />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    />
    <script
      src="https://kit.fontawesome.com/a207e207d8.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/ready.css" />
    <link rel="stylesheet" href="/css/demo.css" />
    <link rel="icon" type="image/x-icon" href="/img/app_icon.ico" />
    <link rel="stylesheet" href="/iziToast-master/dist/css/iziToast.min.css" />
  </head>
  <body>
    <div class="wrapper">
      <div class="main-header">
        <div class="logo-header">
          <a href="/admin/dashboard" class="logo">MaryBill Conglomerate</a>
          <button
            class="navbar-toggler sidenav-toggler ml-auto"
            type="button"
            data-toggle="collapse"
            data-target="collapse"
            aria-controls="sidebar"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <button class="topbar-toggler more">
            <i class="la la-ellipsis-v"></i>
          </button>
        </div>
        <nav class="navbar navbar-header navbar-expand-lg">
          <div class="container-fluid">
            <ul class="navbar-nav topbar-nav ml-md-auto align-items-center">
              <li class="nav-item dropdown">
                <a
                  class="dropdown-toggle profile-pic"
                  data-toggle="dropdown"
                  href="#"
                  aria-expanded="false"
                >
                  <img
                    src="/img/profile-icon.png"
                    alt="user-img"
                    width="36"
                    class="img-circle"
                  /><span>Admin</span>
                </a>
                <ul class="dropdown-menu dropdown-user">
                  <a class="dropdown-item" href="/logout"
                    ><i class="fa fa-power-off"></i> Logout</a
                  >
                </ul>
              </li>
            </ul>
          </div>
        </nav>
      </div>
      <%- include('../partials/sidebar') %>
      <div class="main-panel">
        <div class="content">
          <div class="container-fluid">
            <h4 class="page-title">Product Requests</h4>
            <div class="row">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-body">
                    <div class="table-responsive">
                      <table class="table table-head-bg-warning mt-4">
                        <thead>
                          <tr>
                            <th>Date</th>
                            <th>Sales Rep</th>
                            <th>Unique ID</th>
                            <th>Debt</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% if(requests.length < 1) { %>
                          <tr>
                            <td colspan="7" class="text-center">
                              No requests found
                            </td>
                          </tr>
                          <% } else { %> <% requests.forEach(req => { %>
                          <tr>
                            <td>
                              <%= new Date(req.created_at).toLocaleDateString()
                              %>
                            </td>
                            <td><%= req.sales_rep_name %></td>
                            <td><%= req.unique_id %></td>
                            <td
                              class="<%= req.debt > 0 ? 'text-danger' : 'text-success' %>"
                            >
                              ₦<%= req.debt %>
                            </td>
                            <td>₦<%= req.total_amount %></td>
                            <td>
                              <span
                                class="badge badge-<%= req.status === 'APPROVED' ? 'success' : (req.status === 'DECLINED' ? 'danger' : 'secondary') %>"
                              >
                                <%= req.status %>
                              </span>
                            </td>
                            <td>
                              <% if(req.status === 'PENDING') { %>
                              <div class="d-flex">
                                <form
                                  action="/admin/product-requests/<%= req.id %>/action"
                                  method="POST"
                                  class="mr-1"
                                >
                                  <input
                                    type="hidden"
                                    name="action"
                                    value="approve"
                                  />
                                  <button
                                    type="submit"
                                    class="btn btn-sm btn-success"
                                  >
                                    Approve
                                  </button>
                                </form>
                                <form
                                  action="/admin/product-requests/<%= req.id %>/action"
                                  method="POST"
                                >
                                  <input
                                    type="hidden"
                                    name="action"
                                    value="decline"
                                  />
                                  <button
                                    type="submit"
                                    class="btn btn-sm btn-danger"
                                  >
                                    Decline
                                  </button>
                                </form>
                              </div>
                              <% } else { %>
                              <span class="text-muted"><%= req.status %></span>
                              <% } %>
                              <a
                                href="/admin/product-requests/<%= req.id %>"
                                class="btn btn-sm btn-info ml-1"
                                >View</a
                              >
                            </td>
                          </tr>
                          <% }) %> <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../partials/responseMessage') %>
  </body>
  <script src="/js/core/jquery.3.2.1.min.js"></script>
  <script src="/js/core/popper.min.js"></script>
  <script src="/js/core/bootstrap.min.js"></script>
  <script src="/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>
  <script src="/js/ready.min.js"></script>
  <script src="/iziToast-master/dist/js/iziToast.min.js"></script>
  <script src="/js/toast.js"></script>
</html>

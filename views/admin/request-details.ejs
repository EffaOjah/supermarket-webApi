<!DOCTYPE html>
<html>
  <head>
    <meta
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no"
      name="viewport"
    />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    />
    <script
      src="https://kit.fontawesome.com/a207e207d8.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/ready.css" />
    <link rel="stylesheet" href="/css/demo.css" />
    <link rel="icon" type="image/x-icon" href="/img/app_icon.ico" />
    <link rel="stylesheet" href="/iziToast-master/dist/css/iziToast.min.css" />
  </head>
  <body>
    <div class="wrapper">
      <div class="main-header">
        <div class="logo-header">
          <a href="/admin/dashboard" class="logo">MaryBill Conglomerate</a>
          <button
            class="navbar-toggler sidenav-toggler ml-auto"
            type="button"
            data-toggle="collapse"
            data-target="collapse"
            aria-controls="sidebar"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <button class="topbar-toggler more">
            <i class="la la-ellipsis-v"></i>
          </button>
        </div>
        <nav class="navbar navbar-header navbar-expand-lg">
          <div class="container-fluid">
            <ul class="navbar-nav topbar-nav ml-md-auto align-items-center">
              <li class="nav-item dropdown">
                <a
                  class="dropdown-toggle profile-pic"
                  data-toggle="dropdown"
                  href="#"
                  aria-expanded="false"
                >
                  <img
                    src="/img/profile-icon.png"
                    alt="user-img"
                    width="36"
                    class="img-circle"
                  /><span>Admin</span>
                </a>
                <ul class="dropdown-menu dropdown-user">
                  <a class="dropdown-item" href="/logout"
                    ><i class="fa fa-power-off"></i> Logout</a
                  >
                </ul>
              </li>
            </ul>
          </div>
        </nav>
      </div>
      <%- include('../partials/sidebar') %>
      <div class="main-panel">
        <div class="content">
          <div class="container-fluid">
            <div class="d-flex mb-3 align-items-center">
              <a href="/admin/product-requests" class="btn btn-secondary mr-3"
                >Back to List</a
              >
              <h4 class="page-title mb-0">
                Request #<%= request.id %> Details
              </h4>
            </div>

            <div class="row">
              <div class="col-md-4">
                <div class="card">
                  <div class="card-header">
                    <div class="card-title">Request Info</div>
                  </div>
                  <div class="card-body">
                    <p>
                      <strong>Date:</strong> <%= new
                      Date(request.created_at).toLocaleString() %>
                    </p>
                    <p>
                      <strong>Sales Rep:</strong> <%= request.sales_rep_name %>
                    </p>
                    <p>
                      <strong>Unique ID:</strong>
                      <span class="badge badge-info"
                        ><%= request.sales_rep_unique_id || 'N/A' %></span
                      >
                    </p>
                    <p><strong>Current Debt:</strong> ₦<%= request.debt %></p>
                    <p>
                      <strong>Status:</strong>
                      <span
                        class="badge badge-<%= request.status === 'APPROVED' ? 'success' : (request.status === 'DECLINED' ? 'danger' : 'warning') %>"
                        ><%= request.status %></span
                      >
                    </p>
                    <h4 class="mt-3">Total: ₦<%= request.total_amount %></h4>

                    <% if(request.status === 'PENDING') { %>
                    <hr />
                    <p><strong>Actions:</strong></p>
                    <form
                      action="/admin/product-requests/<%= request.id %>/action"
                      method="POST"
                      class="mb-2"
                    >
                      <input type="hidden" name="action" value="approve" />
                      <button type="submit" class="btn btn-success btn-block">
                        Approve Request
                      </button>
                    </form>
                    <form
                      action="/admin/product-requests/<%= request.id %>/action"
                      method="POST"
                    >
                      <input type="hidden" name="action" value="decline" />
                      <button type="submit" class="btn btn-danger btn-block">
                        Decline Request
                      </button>
                    </form>
                    <% } %>
                  </div>
                </div>
              </div>
              <div class="col-md-8">
                <div class="card">
                  <div class="card-header">
                    <div class="card-title">Requested Items</div>
                  </div>
                  <div class="card-body">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>Product</th>
                          <th>Quantity</th>
                          <th>Unit Price</th>
                          <th>Total</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% request.items.forEach(item => { %>
                        <tr>
                          <td><%= item.product_name %></td>
                          <td><%= item.quantity %></td>
                          <td>₦<%= item.unit_price %></td>
                          <td>₦<%= item.total_price %></td>
                        </tr>
                        <% }) %>
                      </tbody>
                      <tfoot>
                        <tr>
                          <th colspan="3" class="text-right">Grand Total:</th>
                          <th>₦<%= request.total_amount %></th>
                        </tr>
                      </tfoot>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../partials/responseMessage') %>
  </body>
  <script src="/js/core/jquery.3.2.1.min.js"></script>
  <script src="/js/core/popper.min.js"></script>
  <script src="/js/core/bootstrap.min.js"></script>
  <script src="/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>
  <script src="/js/ready.min.js"></script>
  <script src="/iziToast-master/dist/js/iziToast.min.js"></script>
  <script src="/js/toast.js"></script>
</html>

		<div class="main-panel">
			<div class="content">
				<div class="container-fluid">
					<div class="d-flex justify-content-between align-items-center mb-4">
						<h4 class="page-title mb-0">
							<i class="fa-solid fa-boxes-stacked"></i> <span class="text-primary">Asset Register</span>
						</h4>
						<a href="/assets/add" class="btn btn-primary">
							<i class="fa-solid fa-plus"></i> Add New Asset
						</a>
					</div>
					
					<div class="row">
						<div class="col-md-12">
							<div class="card assets-table-card">
								<div class="card-header">
									<div class="card-title">
										<i class="fa-solid fa-list"></i> All Assets
										<% if (assets && assets.length > 0) { %>
											<span class="badge badge-light ml-2"><%= assets.length %></span>
										<% } %>
									</div>
								</div>
								<div class="card-body p-0">
									<% if (assets && assets.length > 0) { %>
										<div class="table-responsive">
											<table class="table table-hover mb-0">
												<thead>
													<tr>
														<th>Asset Name</th>
														<th>Category</th>
														<th>Purchase Date</th>
														<th>Useful Life</th>
														<th>Purchase Price</th>
														<th>Depreciation</th>
														<th>Current Value</th>
														<th>Condition</th>
														<th>Location</th>
														<th>Status</th>
														<th>Action</th>
													</tr>
												</thead>
												<tbody>
													<% assets.forEach(asset => { %>
														<tr>
															<td>
																<strong><%= asset.asset_name %></strong>
																<% if (asset.serial_number) { %>
																	<br><small class="text-muted">SN: <%= asset.serial_number %></small>
																<% } %>
															</td>
															<td><%= asset.asset_category %></td>
															<td><%= new Date(asset.purchase_date).toLocaleDateString() %></td>
															<td><%= asset.useful_life_years || '-' %> years</td>
															<td class="asset-value">₦<%= parseFloat(asset.purchase_price).toLocaleString() %></td>
															<td class="text-danger">
																<% 
																	const cost = parseFloat(asset.purchase_price);
																	const curr = parseFloat(asset.current_value);
																	const dep = cost - curr;
																%>
																-₦<%= dep.toLocaleString() %>
															</td>
															<td class="asset-value">₦<%= curr.toLocaleString() %></td>
															<td>
																<span class="condition-<%= asset.asset_condition.toLowerCase() %>">
																	<%= asset.asset_condition %>
																</span>
															</td>
															<td><%= asset.location %></td>
															<td>
																<% if (asset.status === 'Active') { %>
																	<span class="badge badge-success"><%= asset.status %></span>
																<% } else if (asset.status === 'Under Maintenance') { %>
																	<span class="badge badge-warning"><%= asset.status %></span>
																<% } else if (asset.status === 'Retired') { %>
																	<span class="badge badge-secondary"><%= asset.status %></span>
																<% } else if (asset.status === 'Disposed') { %>
																	<span class="badge badge-danger"><%= asset.status %></span>
																<% } else { %>
																	<span class="badge badge-info"><%= asset.status %></span>
																<% } %>
															</td>
															<td>
																<a href="/assets/<%= asset.asset_id %>/update" class="btn btn-sm btn-link text-primary" data-toggle="tooltip" title="Edit Asset">
																	<i class="fa fa-edit"></i>
																</a>
															</td>
														</tr>
													<% }); %>
												</tbody>
											</table>
										</div>
									<% } else { %>
										<div class="empty-state">
											<i class="fa-solid fa-box-open"></i>
											<h5>No Assets Found</h5>
											<p>Start by adding your first asset to the register.</p>
											<a href="/assets/add" class="btn btn-add-asset mt-3">
												<i class="fa-solid fa-plus"></i> Add Your First Asset
											</a>
										</div>
									<% } %>
								</div>
							</div>
						</div>

		<script>
			document.getElementById("productSearch").addEventListener("input", function () {
				const searchValue = this.value.toLowerCase();
				const table = document.querySelector(".table");
				const tbody = table.querySelector("tbody");
				const rows = tbody.querySelectorAll("tr");

				let anyVisible = false;

				rows.forEach(row => {
					const name = row.cells[1].textContent.toLowerCase();
					const wholesale = row.cells[2].textContent.toLowerCase();
					const retail = row.cells[3].textContent.toLowerCase();
					const supplier = row.cells[4].textContent.toLowerCase();
					const category = row.cells[5].textContent.toLowerCase();

					const match = name.includes(searchValue) ||
						supplier.includes(searchValue) ||
						category.includes(searchValue);

					if (match) {
						row.style.display = "";
						anyVisible = true;
					} else {
						row.style.display = "none";
					}
				});

				// Hide the table if no match is found
				table.parentElement.parentElement.style.display = anyVisible ? "" : "none";
			});
		</script>


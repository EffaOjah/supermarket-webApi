		<div class="main-panel">
			<div class="content">
				<div class="container-fluid">
					<div class="d-flex justify-content-between align-items-center mb-4 no-print">
						<h4 class="page-title mb-0"><i class="fa-solid fa-file-invoice-dollar"></i> <span
								class="text-primary">Balance Sheet</span></h4>
						<button onclick="window.print()" class="btn print-btn"><i class="fa-solid fa-print"></i>
							Print</button>
					</div>

					<!-- Date Filter -->
					<div class="filter-section no-print">
						<form method="GET" action="/ledger/balance-sheet">
							<div class="row">
								<div class="col-md-4">
									<div class="form-group">
										<label><strong>As Of Date</strong></label>
										<input type="date" class="form-control" name="asOfDate"
											value="<%= balanceSheet.asOfDate %>" required>
									</div>
								</div>
								<div class="col-md-2">
									<div class="form-group">
										<label>&nbsp;</label>
										<button type="submit" class="btn btn-primary"><i
												class="fa-solid fa-chart-line"></i> Generate Report</button>
									</div>
								</div>
							</div>
						</form>
					</div>

					<!-- Company Header -->
					<div class="company-header">
						<div class="company-name">MaryBill Conglomerate Ltd.</div>
						<div class="report-title">Balance Sheet</div>
						<div class="report-date">As of <%= new Date(balanceSheet.asOfDate).toLocaleDateString('en-US', {
								year: 'numeric' , month: 'long' , day: 'numeric' }) %>
						</div>
					</div>

					<!-- Balance Sheet Content -->
					<div class="row">
						<div class="col-md-12">
							<div class="card balance-sheet-card">
								<div class="card-body p-0">
									<!-- ASSETS SECTION -->
									<div class="section-header assets">
										<i class="fa-solid fa-coins"></i> ASSETS
									</div>
									<% if (balanceSheet.assets.accounts.length> 0) { %>
										<% balanceSheet.assets.accounts.forEach(account=> { %>
											<div class="account-row">
												<div>
													<span class="account-name">
														<%= account.accountName %>
													</span>
													<span class="account-code">(<%= account.accountCode %>)</span>
												</div>
												<div class="account-balance">₦<%=
														account.balance.toLocaleString('en-US', { minimumFractionDigits:
														2, maximumFractionDigits: 2 }) %>
												</div>
											</div>
											<% }); %>
												<% } else { %>
													<div class="account-row">
														<div class="text-muted">No asset accounts with balances</div>
														<div class="account-balance">₦0.00</div>
													</div>
													<% } %>
														<div class="subtotal-row d-flex justify-content-between">
															<span>Total Assets</span>
															<span>₦<%= balanceSheet.assets.total.toLocaleString('en-US',
																	{ minimumFractionDigits: 2, maximumFractionDigits: 2
																	}) %></span>
														</div>

														<!-- LIABILITIES SECTION -->
														<div class="section-header liabilities mt-4">
															<i class="fa-solid fa-file-invoice"></i> LIABILITIES
														</div>
														<% if (balanceSheet.liabilities.accounts.length> 0) { %>
															<% balanceSheet.liabilities.accounts.forEach(account=> { %>
																<div class="account-row">
																	<div>
																		<span class="account-name">
																			<%= account.accountName %>
																		</span>
																		<span class="account-code">(<%=
																				account.accountCode %>)</span>
																	</div>
																	<div class="account-balance">₦<%=
																			account.balance.toLocaleString('en-US', {
																			minimumFractionDigits: 2,
																			maximumFractionDigits: 2 }) %>
																	</div>
																</div>
																<% }); %>
																	<% } else { %>
																		<div class="account-row">
																			<div class="text-muted">No liability
																				accounts with balances</div>
																			<div class="account-balance">₦0.00</div>
																		</div>
																		<% } %>
																			<div
																				class="subtotal-row d-flex justify-content-between">
																				<span>Total Liabilities</span>
																				<span>₦<%=
																						balanceSheet.liabilities.total.toLocaleString('en-US',
																						{ minimumFractionDigits: 2,
																						maximumFractionDigits: 2 }) %>
																						</span>
																			</div>

																			<!-- EQUITY SECTION -->
																			<div class="section-header equity mt-4">
																				<i class="fa-solid fa-landmark"></i>
																				EQUITY
																			</div>
																			<% if (balanceSheet.equity.accounts.length>
																				0) { %>
																				<%
																					balanceSheet.equity.accounts.forEach(account=>
																					{ %>
																					<div class="account-row">
																						<div>
																							<span class="account-name">
																								<%= account.accountName
																									%>
																							</span>
																							<span class="account-code">(
																								<%= account.accountCode
																									%>)</span>
																						</div>
																						<div class="account-balance">₦
																							<%= account.balance.toLocaleString('en-US',
																								{ minimumFractionDigits:
																								2,
																								maximumFractionDigits: 2
																								}) %>
																						</div>
																					</div>
																					<% }); %>
																						<% } else { %>
																							<div class="account-row">
																								<div class="text-muted">
																									No equity accounts
																									with balances</div>
																								<div
																									class="account-balance">
																									₦0.00</div>
																							</div>
																							<% } %>
																								<div
																									class="subtotal-row d-flex justify-content-between">
																									<span>Total
																										Equity</span>
																									<span>₦<%=
																											balanceSheet.equity.total.toLocaleString('en-US',
																											{
																											minimumFractionDigits:
																											2,
																											maximumFractionDigits:
																											2 }) %>
																											</span>
																								</div>

																								<!-- TOTAL LIABILITIES AND EQUITY -->
																								<div
																									class="total-row d-flex justify-content-between mt-3">
																									<span><i
																											class="fa-solid fa-plus-circle"></i>
																										Total
																										Liabilities and
																										Equity</span>
																									<span>₦<%=
																											balanceSheet.totalLiabilitiesAndEquity.toLocaleString('en-US',
																											{
																											minimumFractionDigits:
																											2,
																											maximumFractionDigits:
																											2 }) %>
																											</span>
																								</div>
								</div>
							</div>
						</div>
					</div>

					<!-- Accounting Equation Verification -->
					<div class="equation-section <%= balanceSheet.isBalanced ? '' : 'unbalanced' %>">
						<h5 class="mb-4 text-center">
							<i class="fa-solid fa-calculator"></i> Accounting Equation Verification
						</h5>
						<div class="equation-item">
							<span><i class="fa-solid fa-coins"></i> Total Assets</span>
							<strong>₦<%= balanceSheet.assets.total.toLocaleString('en-US', { minimumFractionDigits: 2,
									maximumFractionDigits: 2 }) %></strong>
						</div>
						<div class="equation-item">
							<span><i class="fa-solid fa-equals"></i> Total Liabilities + Equity</span>
							<strong>₦<%= balanceSheet.totalLiabilitiesAndEquity.toLocaleString('en-US', {
									minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></strong>
						</div>
						<div class="equation-item main <%= balanceSheet.isBalanced ? '' : 'unbalanced' %>">
							<span><i class="fa-solid fa-not-equal"></i> Difference</span>
							<strong class="<%= balanceSheet.isBalanced ? 'text-success' : 'text-danger' %>">
								₦<%= Math.abs(balanceSheet.difference).toLocaleString('en-US', { minimumFractionDigits:
									2, maximumFractionDigits: 2 }) %>
							</strong>
						</div>
						<div class="text-center mt-4">
							<% if (balanceSheet.isBalanced) { %>
								<span class="badge badge-success" style="font-size: 1.2rem; padding: 0.75rem 1.5rem;">
									<i class="fa-solid fa-check-circle"></i> Balance Sheet is Balanced
								</span>
								<% } else { %>
									<span class="badge badge-danger"
										style="font-size: 1.2rem; padding: 0.75rem 1.5rem;">
										<i class="fa-solid fa-exclamation-triangle"></i> Balance Sheet is Unbalanced
									</span>
									<% } %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

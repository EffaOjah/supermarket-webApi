                >
                  <i class="fas fa-print"></i> Print Invoice
                </button>
              </div>
            </div>

            <div class="invoice-box">
              <table cellpadding="0" cellspacing="0">
                <tr class="top">
                  <td colspan="4">
                    <table>
                      <tr>
                        <td class="title">
                          MaryBill <br />
                          Conglomerate
                        </td>
                        <td>
                          Invoice #: <%= invoice.invoice_number %><br />
                          Date: <%= new
                          Date(invoice.invoice_date).toLocaleDateString() %><br />
                          Due: <%= new
                          Date(invoice.due_date).toLocaleDateString() %><br />
                          Status:
                          <span
                            class="badge badge-<%= invoice.status === 'PAID' ? 'success' : 'warning' %>"
                            ><%= invoice.status %></span
                          >
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
                <tr class="information">
                  <td colspan="4">
                    <table>
                      <tr>
                        <td>
                          MaryBill Conglomerate<br />
                          Nigeria.<br />
                        </td>
                        <td>
                          <%= invoice.customer.name %><br />
                          <%= invoice.customer.email %><br />
                          <%= invoice.customer.phone %>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
                <tr class="heading">
                  <td>Item</td>
                  <td style="text-align: center">Unit Price</td>
                  <td style="text-align: center">Quantity</td>
                  <td>Total</td>
                </tr>
                <% invoice.items.forEach(item => { %>
                <tr class="item">
                  <td><%= item.description %></td>
                  <td style="text-align: center">
                    ₦<%= parseFloat(item.unit_price).toLocaleString() %>
                  </td>
                  <td style="text-align: center">x<%= item.quantity %></td>
                  <td>₦<%= parseFloat(item.total).toLocaleString() %></td>
                </tr>
                <% }) %>
                <tr class="total">
                  <td colspan="3"></td>
                  <td>
                    Total: ₦<%=
                    parseFloat(invoice.total_amount).toLocaleString() %>
                  </td>
                </tr>
              </table>
            </div>

      <div class="main-panel">
        <div class="content">
          <div class="container-fluid">
            <h4 class="page-title">Apply for Leave</h4>

            <div class="row justify-content-center">
              <div class="col-md-8">
                <div class="card">
                  <div class="card-header">
                    <h4 class="card-title">Leave Request Form</h4>
                  </div>
                  <div class="card-body">
                    <form action="/leave/apply" method="POST">
                      <div class="row">
                        <div class="col-md-6">
                          <div class="form-group">
                            <label>Employee (Applying For)</label>
                            <select
                              class="form-control"
                              name="employeeId"
                              required
                            >
                              <option value="">-- Select Employee --</option>
                              <% employees.forEach(e => { %>
                              <option value="<%= e.employee_id %>">
                                <%= e.first_name %> <%= e.last_name %>
                              </option>
                              <% }) %>
                            </select>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group">
                            <label>Leave Type</label>
                            <select
                              class="form-control"
                              name="leaveType"
                              required
                            >
                              <option value="Annual">Annual Leave</option>
                              <option value="Sick">Sick Leave</option>
                              <option value="Casual">Casual Leave</option>
                              <option value="Maternity">Maternity Leave</option>
                              <option value="Paternity">Paternity Leave</option>
                              <option value="Unpaid">Unpaid Leave</option>
                            </select>
                          </div>
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-md-4">
                          <div class="form-group">
                            <label>Start Date</label>
                            <input
                              type="date"
                              class="form-control"
                              name="startDate"
                              id="startDate"
                              required
                            />
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-group">
                            <label>End Date</label>
                            <input
                              type="date"
                              class="form-control"
                              name="endDate"
                              id="endDate"
                              required
                            />
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-group">
                            <label>Number of Days</label>
                            <input
                              type="number"
                              class="form-control"
                              name="daysRequested"
                              id="daysRequested"
                              readonly
                            />
                          </div>
                        </div>
                      </div>

                      <div class="form-group">
                        <label>Reason for Leave</label>
                        <textarea
                          class="form-control"
                          name="reason"
                          rows="3"
                          required
                        ></textarea>
                      </div>

                      <div class="card-action">
                        <button type="submit" class="btn btn-success">
                          Submit Request
                        </button>
                        <a href="/admin/dashboard" class="btn btn-danger"
                          >Cancel</a
                        >
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../partials/responseMessage') %>
  
    <script src="/js/core/jquery.3.2.1.min.js"></script>
    <script src="/js/core/popper.min.js"></script>
    <script src="/js/core/bootstrap.min.js"></script>
    <script src="/iziToast-master/dist/js/iziToast.min.js"></script>
    <script src="/js/ready.min.js"></script>
    <script src="/js/toast.js"></script>
    
    <script>
      $(document).ready(function() {
        // Auto-calculate number of days
        $("#startDate, #endDate").on("change input", function () {
          const startStr = $("#startDate").val();
          const endStr = $("#endDate").val();

          if (startStr && endStr) {
            const start = new Date(startStr);
            const end = new Date(endStr);

            // Calculate difference in time
            const timeDiff = end.getTime() - start.getTime();
            
            // Calculate difference in days (divide by milliseconds in a day)
            // Use Math.round to handle minor DST offsets
            const dayDiff = Math.round(timeDiff / (1000 * 3600 * 24));

            if (dayDiff >= 0) {
              // Add 1 because dates are inclusive (e.g., Mon-Mon is 1 day)
              $("#daysRequested").val(dayDiff + 1);
            } else {
              // End date is before start date
              $("#daysRequested").val("");
              $("#endDate").val(""); // Clear invalid end date
              
              // Show error message
              if (typeof iziToast !== 'undefined') {
                iziToast.error({
                    title: 'Invalid Date',
                    message: 'End date cannot be earlier than start date',
                    position: 'topRight'
                });
              } else {
                alert('End date cannot be earlier than start date');
              }
            }
          } else {
            $("#daysRequested").val("");
          }
        });
      });
    </script>
  </body>

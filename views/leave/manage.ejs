					</ul>
				</div>
			</nav>
		</div>
		<!-- Sidebar -->
		<%- include('../partials/sidebar') %>
		<!-- End Sidebar -->

      <div class="main-panel">
        <div class="content">
          <div class="container-fluid">
            <h4 class="page-title">Manage Leave Requests</h4>

            <div class="row">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-header">
                    <div class="card-title">
                      All Requests
                      <a
                        href="/leave/apply"
                        class="btn btn-primary btn-sm float-right"
                        >New Request</a
                      >
                    </div>
                  </div>
                  <div class="card-body">
                    <div class="table-responsive">
                      <table class="table table-hover">
                        <thead>
                          <tr>
                            <th>Staff</th>
                            <th>Type</th>
                            <th>Dates</th>
                            <th>Days</th>
                            <th>Reason</th>
                            <th>Status</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% leaves.forEach(l => { %>
                          <tr>
                            <td>
                              <strong
                                ><%= l.first_name %> <%= l.last_name %></strong
                              ><br /><small><%= l.department %></small>
                            </td>
                            <td><%= l.leave_type %></td>
                            <td>
                              <%= new Date(l.start_date).toLocaleDateString() %>
                              - <%= new Date(l.end_date).toLocaleDateString() %>
                            </td>
                            <td><%= l.days_requested %></td>
                            <td><%= l.reason %></td>
                            <td>
                              <% if(l.status === 'Pending') { %>
                              <span class="badge badge-warning">Pending</span>
                              <% } else if(l.status === 'Approved') { %>
                              <span class="badge badge-success">Approved</span>
                              <% } else { %>
                              <span class="badge badge-danger">Rejected</span>
                              <% } %>
                            </td>
                            <td>
                              <% if(l.status === 'Pending') { %>
                              <form
                                action="/leave/update-status/<%= l.leave_id %>"
                                method="POST"
                                style="display: inline"
                              >
                                <input
                                  type="hidden"
                                  name="status"
                                  value="Approved"
                                />
                                <button
                                  type="submit"
                                  class="btn btn-success btn-xs"
                                  title="Approve"
                                >
                                  <i class="fa fa-check"></i>
                                </button>
                              </form>
                              <form
                                action="/leave/update-status/<%= l.leave_id %>"
                                method="POST"
                                style="display: inline"
                              >
                                <input
                                  type="hidden"
                                  name="status"
                                  value="Rejected"
                                />
                                <button
                                  type="submit"
                                  class="btn btn-danger btn-xs"
                                  title="Reject"
                                >
                                  <i class="fa fa-times"></i>
                                </button>
                              </form>
                              <% } else { %>
                              <span class="text-muted">-</span>
                              <% } %>
                            </td>
                          </tr>
                          <% }) %> <% if(leaves.length === 0) { %>
                          <tr>
                            <td colspan="7" class="text-center">
                              No leave requests found.
                            </td>
                          </tr>
                          <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../partials/responseMessage') %>
  </body>
  <script src="/js/core/jquery.3.2.1.min.js"></script>
  <script src="/js/core/popper.min.js"></script>
  <script src="/js/core/bootstrap.min.js"></script>
  <script src="/iziToast-master/dist/js/iziToast.min.js"></script>
  <script src="/js/ready.min.js"></script>
  <script src="/js/toast.js"></script>
</html>

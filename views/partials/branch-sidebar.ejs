<div class="sidebar">
  <div class="sidebar-wrapper">
    <div class="user">
      <div class="photo">
        <img src="/img/profile-icon.png" />
      </div>
      <div class="info">
        <a data-toggle="collapse" href="#collapseExample" aria-expanded="true">
          <span>
            <%= user && user.username ? user.username : (user ?
            user.role.toUpperCase() : 'Administrator') %>
            <span class="user-level"
              ><%= user && user.role ? user.role.toUpperCase() : 'Administrator'
              %></span
            >
            <span class="caret"></span>
          </span>
        </a>
        <div class="clearfix"></div>

        <div class="collapse in" id="collapseExample" aria-expanded="true">
          <ul class="nav">
            <li>
              <a href="#profile">
                <span class="link-collapse">My Profile</span>
              </a>
            </li>
            <li>
              <a href="#edit">
                <span class="link-collapse">Edit Profile</span>
              </a>
            </li>
            <li>
              <a href="#settings">
                <span class="link-collapse">Settings</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <ul class="nav">
      <li class="nav-item">
        <a
          href="<%= user && user.role === 'pko' ? '/pko/dashboard' : '/admin/dashboard' %>"
        >
          <i class="fa-solid fa-gauge"></i>
          <p>Dashboard</p>
        </a>
      </li>
      <li
        class="nav-item <%= currentPath.startsWith('/branch/') && !currentPath.includes('/products') && !currentPath.includes('/sales') && !currentPath.includes('/notifications') && !currentPath.includes('/transfer-stock') ? 'active' : '' %>"
      >
        <a href="/branch/<%= branch[0].branch_id %>">
          <i class="fas fa-chart-pie"></i>
          <p>Branch Overview</p>
        </a>
      </li>
      <li
        class="nav-item <%= currentPath.startsWith('/stock-branch/') ? 'active' : '' %>"
      >
        <a href="/stock-branch/<%= branch[0].branch_id %>">
          <i class="fa-solid fa-arrow-trend-up"></i>
          <p>Stock Branch</p>
        </a>
      </li>
      <li
        class="nav-item <%= currentPath.includes('/products') ? 'active' : '' %>"
      >
        <a href="/branch/<%= branch[0].branch_id %>/products">
          <i class="fa-solid fa-tarp"></i>
          <p>Branch Products</p>
          <% if (typeof branchProducts !== 'undefined') { %>
          <span class="badge badge-count"> <%= branchProducts.length %> </span>
          <% } else if (typeof products !== 'undefined') { %>
          <span class="badge badge-count"> <%= products.length %> </span>
          <% } %>
        </a>
      </li>
      <li
        class="nav-item <%= currentPath.includes('/sales') ? 'active' : '' %>"
      >
        <a href="/branch/<%= branch[0].branch_id %>/sales">
          <i class="fa-solid fa-cart-shopping"></i>
          <p>Sales</p>
          <span class="badge badge-count"></span>
        </a>
      </li>
      <li
        class="nav-item <%= currentPath.includes('/notifications') ? 'active' : '' %>"
      >
        <a href="/branch/<%= branch[0].branch_id %>/notifications">
          <i class="far fa-bell"></i>
          <p>Notifications</p>
          <span class="badge badge-count"></span>
        </a>
      </li>
      <li
        class="nav-item <%= currentPath.includes('/transfer-stock') ? 'active' : '' %>"
      >
        <a href="/branch/<%= branch[0].branch_id %>/transfer-stock">
          <i class="fa-solid fa-share"></i>
          <p>Transfer Stock</p>
          <span class="badge badge-count"></span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/logout">
          <i class="fas fa-sign-out-alt"></i>
          <p>Log Out</p>
        </a>
      </li>
    </ul>
  </div>
</div>

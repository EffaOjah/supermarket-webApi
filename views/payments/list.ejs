<!DOCTYPE html>
<html>
  <head>
    <title>All Payments</title>
    <meta
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no"
      name="viewport"
    />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    />
    <script
      src="https://kit.fontawesome.com/a207e207d8.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/ready.css" />
    <link rel="stylesheet" href="/css/demo.css" />
    <link rel="stylesheet" href="/iziToast-master/dist/css/iziToast.min.css" />
  </head>
  <body>
    <div class="wrapper">
      <div class="main-header">
        <div class="logo-header">
          <a href="/admin/dashboard" class="logo">
            MaryBill Conglomerate
          </a>
          <button class="navbar-toggler sidenav-toggler ml-auto" type="button" data-toggle="collapse"
            data-target="collapse" aria-controls="sidebar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <button class="topbar-toggler more"><i class="la la-ellipsis-v"></i></button>
        </div>
        <nav class="navbar navbar-header navbar-expand-lg">
          <div class="container-fluid">
              <ul class="navbar-nav topbar-nav ml-md-auto align-items-center">
                   <li class="nav-item dropdown">
                            <a class="dropdown-toggle profile-pic" data-toggle="dropdown" href="#" aria-expanded="false"> <img
                                    src="/img/profile-icon.png" alt="user-img" width="36" class="img-circle"><span>Admin</span></span>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <a class="dropdown-item" href="/logout"><i class="fa fa-power-off"></i> Logout</a>
                            </ul>
                        </li>
            </ul>
          </div>
        </nav>
      </div>

      <!-- Sidebar -->
      <%- include('../partials/sidebar') %>
      <!-- End Sidebar -->

      <div class="main-panel">
        <div class="content">
          <div class="container-fluid">
            <div class="d-flex align-items-center justify-content-between mb-3">
               <h4 class="page-title">Payment History</h4>
               <a href="/payments/receive" class="btn btn-primary">
                 <i class="fas fa-plus"></i> New Payment
               </a>
            </div>

            <div class="card shadow">
              <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Invoice #</th>
                                <th>Customer</th>
                                <th>Method</th>
                                <th>Reference</th>
                                <th class="text-right">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (payments.length === 0) { %>
                                <tr>
                                    <td colspan="6" class="text-center">No payments found.</td>
                                </tr>
                            <% } else { %>
                                <% payments.forEach(payment => { %>
                                <tr>
                                    <td><%= new Date(payment.payment_date).toLocaleDateString() %></td>
                                    <td><a href="/invoices/<%= payment.invoice_id %>"><%= payment.invoice_number %></a></td>
                                    <td><%= payment.customer_name %></td>
                                    <td><%= payment.payment_method %></td>
                                    <td><%= payment.reference || '-' %></td>
                                    <td class="text-right"><strong>â‚¦<%= payment.amount %></strong></td>
                                </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
    
    <script src="/js/core/jquery.3.2.1.min.js"></script>
    <script src="/js/core/popper.min.js"></script>
    <script src="/js/core/bootstrap.min.js"></script>
    <script src="/iziToast-master/dist/js/iziToast.min.js"></script>
    <script src="/js/ready.min.js"></script>
  </body>
</html>

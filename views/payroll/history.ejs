      <div class="main-panel">
        <div class="content">
          <div class="container-fluid">
            <h4 class="page-title">Payroll History</h4>

            <div class="row">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-header">
                    <div class="card-title">
                      Previous Runs
                      <a
                        href="/payroll/run"
                        class="btn btn-primary btn-sm float-right"
                        >New Run</a
                      >
                    </div>
                  </div>
                  <div class="card-body">
                    <div class="table-responsive">
                      <table class="table table-hover">
                        <thead>
                          <tr>
                            <th>Run Date</th>
                            <th>Period</th>
                            <th>Total Gross</th>
                            <th>Total Net</th>
                            <th>Employees</th>
                            <th>Status</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% runs.forEach(r => { %>
                          <tr>
                            <td>
                              <%= new Date(r.run_date).toLocaleDateString() %>
                            </td>
                            <td>
                              <%= new
                              Date(r.pay_period_start).toLocaleDateString() %> -
                              <%= new
                              Date(r.pay_period_end).toLocaleDateString() %>
                            </td>
                            <td>₦<%= r.total_gross.toLocaleString() %></td>
                            <td class="text-success font-weight-bold">
                              ₦<%= r.total_net.toLocaleString() %>
                            </td>
                            <td><%= r.employee_count %></td>
                            <td>
                              <span
                                class="badge badge-<%= r.status == 'Paid' ? 'success' : 'warning' %>"
                                ><%= r.status %></span
                              >
                            </td>
                            <td>
                              <a
                                href="/payroll/run/<%= r.run_id %>"
                                class="btn btn-sm btn-info"
                                >Details</a
                              >
                            </td>
                          </tr>
                          <% }) %> <% if(runs.length === 0) { %>
                          <tr>
                            <td colspan="7" class="text-center">
                              No payroll runs found.
                            </td>
                          </tr>
                          <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>

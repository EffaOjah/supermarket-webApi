<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Payroll Details - MaryBill</title>
    <meta
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no"
      name="viewport"
    />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    />
    <script
      src="https://kit.fontawesome.com/a207e207d8.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/ready.css" />
    <link rel="stylesheet" href="/css/demo.css" />
  </head>
  <body>
    <div class="wrapper">
      <div class="main-header">
			<div class="logo-header">
				<a href="/admin/dashboard" class="logo">
					MaryBill Conglomerate
				</a>
				<button class="navbar-toggler sidenav-toggler ml-auto" type="button" data-toggle="collapse"
					data-target="collapse" aria-controls="sidebar" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<button class="topbar-toggler more"><i class="la la-ellipsis-v"></i></button>
			</div>
			<nav class="navbar navbar-header navbar-expand-lg">
				<div class="container-fluid">

					<form class="navbar-left navbar-form nav-search mr-md-3" action="">
						<div class="input-group">
							<input type="text" placeholder="Search ..." class="form-control">
							<div class="input-group-append">
								<span class="input-group-text">
									<i class="la la-search search-icon"></i>
								</span>
							</div>
						</div>
					</form>
					<ul class="navbar-nav topbar-nav ml-md-auto align-items-center">
						<li class="nav-item dropdown hidden-caret">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
								aria-haspopup="true" aria-expanded="false">
								<i class="la la-envelope"></i>
							</a>
						</li>
						<li class="nav-item dropdown">
							<a class="dropdown-toggle profile-pic" data-toggle="dropdown" href="#" aria-expanded="false"> <img
									src="/img/profile-icon.png" alt="user-img" width="36" class="img-circle"><span>Steven</span></span>
							</a>
							<ul class="dropdown-menu dropdown-user">
								<li>
									<div class="user-box">
										<div class="u-img"><img src="/img/profile-icon.png" alt="user"></div>
										<div class="u-text">
											<h4>Steven</h4>
											<p class="text-muted">hello@themekita.com</p><a href="#"
												class="btn btn-rounded btn-danger btn-sm">View Profile</a>
										</div>
									</div>
								</li>
								<div class="dropdown-divider"></div>
								<a class="dropdown-item" href="#"><i class="ti-user"></i> My Profile</a>
								<a class="dropdown-item" href="#"></i> My Balance</a>
								<a class="dropdown-item" href="#"><i class="ti-email"></i> Inbox</a>
								<div class="dropdown-divider"></div>
								<a class="dropdown-item" href="#"><i class="ti-settings"></i> Account Setting</a>
								<div class="dropdown-divider"></div>
								<a class="dropdown-item" href="/logout"><i class="fa fa-power-off"></i> Logout</a>
							</ul>
							<!-- /.dropdown-user -->
						</li>
					</ul>
				</div>
			</nav>
		</div>
		<!-- Sidebar -->
		<%- include('../partials/sidebar') %>
		<!-- End Sidebar -->

      <div class="main-panel">
        <div class="content">
          <div class="container-fluid">
            <h4 class="page-title">Payroll Run Details</h4>

            <div class="row">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-header">
                    <div class="card-title">
                      Employee Payslips
                      <a
                        href="/payroll/history"
                        class="btn btn-default btn-sm float-right"
                        >Back to History</a
                      >
                    </div>
                  </div>
                  <div class="card-body">
                    <div class="table-responsive">
                      <table class="table table-hover table-striped">
                        <thead>
                          <tr>
                            <th>Staff ID</th>
                            <th>Name</th>
                            <th>Department</th>
                            <th>Basic</th>
                            <th>Total Allowances</th>
                            <th>Total Deductions</th>
                            <th>Net Salary</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% payslips.forEach(p => { %>
                          <tr>
                            <td><%= p.employee_id %></td>
                            <!-- Usually we want Staff ID, but model returns employee_id join needed or select staff_id -->
                            <td><%= p.first_name %> <%= p.last_name %></td>
                            <td><%= p.department %></td>
                            <td>₦<%= p.basic_salary.toLocaleString() %></td>
                            <td>₦<%= p.total_allowances.toLocaleString() %></td>
                            <td class="text-danger">
                              ₦<%= p.total_deductions.toLocaleString() %>
                            </td>
                            <td class="text-success font-weight-bold">
                              ₦<%= p.net_salary.toLocaleString() %>
                            </td>
                            <td>
                              <button
                                class="btn btn-sm btn-outline-primary view-payslip-btn"
                                data-id="<%= p.payslip_id %>"
                                data-json='<%- (typeof p.payslip_json === "object") ? JSON.stringify(p.payslip_json) : p.payslip_json %>'
                                data-name="<%= p.first_name %> <%= p.last_name %>"
                              >
                                View Slip
                              </button>
                            </td>
                          </tr>
                          <% }) %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal -->
    <div
      class="modal fade"
      id="payslipModal"
      tabindex="-1"
      role="dialog"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="payslipTitle">Payslip</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body" id="payslipBody">
            <!-- Dynamic Content -->
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
            <button type="button" class="btn btn-primary" id="printPayslipBtn">
              Print
            </button>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script src="/js/core/jquery.3.2.1.min.js"></script>
  <script src="/js/core/popper.min.js"></script>
  <script src="/js/core/bootstrap.min.js"></script>
  <script src="/js/ready.min.js"></script>
  <script>
    $(document).ready(function () {
      $(".view-payslip-btn").click(function () {
        const name = $(this).data("name");
        const details = $(this).data("json");
        const id = $(this).data("id");

        $("#payslipTitle").text("Payslip for " + name);

        // Set Print Button Action
        $("#printPayslipBtn")
          .off("click")
          .on("click", function () {
            window.open("/payroll/payslip/" + id + "/print", "_blank");
          });

        let html = '<ul class="list-group">';

        // Handle if details is already an object or string
        let items = details;
        if (typeof details === "string") {
          items = JSON.parse(details);
        }

        items.forEach((d) => {
          let color = d.type === "Earning" ? "text-success" : "text-danger";
          html += `<li class="list-group-item d-flex justify-content-between align-items-center">
                            ${d.name}
                            <span class="${color} font-weight-bold">₦${parseFloat(
            d.amount
          ).toLocaleString()}</span>
                         </li>`;
        });
        html += "</ul>";
        $("#payslipBody").html(html);
        $("#payslipModal").modal("show");
      });
    });
  </script>
</html>

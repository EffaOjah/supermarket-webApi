				</div>
			</nav>
		</div>
		<!-- Sidebar -->
		<%- include('../partials/sidebar') %>
		<!-- End Sidebar -->

      <div class="main-panel">
        <div class="content">
          <div class="container-fluid">
            <h4 class="page-title">Run Payroll</h4>

            <div class="row justify-content-center">
              <div class="col-md-6">
                <div class="card">
                  <div class="card-header">
                    <h4 class="card-title">Select Pay Period</h4>
                  </div>
                  <div class="card-body">
                    <form action="/payroll/process" method="POST">
                      <div class="form-group">
                        <label>Start Date</label>
                        <input
                          type="date"
                          class="form-control"
                          name="startDate"
                          id="startDate"
                          required
                        />
                      </div>
                      <div class="form-group">
                        <label>End Date</label>
                        <input
                          type="date"
                          class="form-control"
                          name="endDate"
                          id="endDate"
                          required
                        />
                      </div>

                      <div class="alert alert-info mt-3">
                        <i class="fa fa-info-circle"></i> This will calculate
                        salary for all active employees based on their structure
                        and attendance for the selected period.
                      </div>

                      <div class="card-action">
                        <button type="submit" class="btn btn-success btn-block">
                          Process Payroll
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../partials/responseMessage') %>
  </body>
  <script src="/js/core/jquery.3.2.1.min.js"></script>
  <script src="/js/core/popper.min.js"></script>
  <script src="/js/core/bootstrap.min.js"></script>
  <script src="/iziToast-master/dist/js/iziToast.min.js"></script>
  <script src="/js/ready.min.js"></script>
  <script src="/js/toast.js"></script>
  <script>
    $(document).ready(function() {
      $("#startDate, #endDate").on("change input", function() {
        const startStr = $("#startDate").val();
        const endStr = $("#endDate").val();

        if (startStr && endStr) {
          const start = new Date(startStr);
          const end = new Date(endStr);
          
          if (end < start) {
             $("#endDate").val(""); // Clear invalid end date
             
             if (typeof iziToast !== 'undefined') {
                iziToast.error({
                    title: 'Invalid Date',
                    message: 'End date cannot be earlier than start date',
                    position: 'topRight'
                });
             } else {
                alert('End date cannot be earlier than start date');
             }
          }
        }
      });
    });
  </script>
</html>

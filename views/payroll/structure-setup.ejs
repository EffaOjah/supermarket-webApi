      <div class="main-panel">
        <div class="content">
          <div class="container-fluid">
            <h4 class="page-title">Payroll Configuration</h4>

            <div class="row">
              <!-- Create Component -->
              <div class="col-md-4">
                <div class="card">
                  <div class="card-header">
                    <h4 class="card-title">New Salary Component</h4>
                  </div>
                  <div class="card-body">
                    <form action="/payroll/component/create" method="POST">
                      <div class="form-group">
                        <label>Name</label>
                        <input
                          type="text"
                          class="form-control"
                          name="name"
                          required
                          placeholder="e.g Housing"
                        />
                      </div>
                      <div class="form-group">
                        <label>Type</label>
                        <select class="form-control" name="type">
                          <option value="Earning">Earning</option>
                          <option value="Deduction">Deduction</option>
                        </select>
                      </div>
                      <div class="form-check">
                        <label class="form-check-label">
                          <input
                            class="form-check-input"
                            type="checkbox"
                            name="isTaxable"
                            value="1"
                            checked
                          />
                          <span class="form-check-sign">Is Taxable?</span>
                        </label>
                      </div>
                      <div class="form-check">
                        <label class="form-check-label">
                          <input
                            class="form-check-input"
                            type="checkbox"
                            name="isFixed"
                            value="1"
                            checked
                          />
                          <span class="form-check-sign">Is Fixed Amount?</span>
                        </label>
                      </div>
                      <button type="submit" class="btn btn-primary mt-3">
                        Create Component
                      </button>
                    </form>
                  </div>
                </div>

                <!-- List Components -->
                <div class="card">
                  <div class="card-header">
                    <h4 class="card-title">Existing Components</h4>
                  </div>
                  <div class="card-body">
                    <ul class="list-group">
                      <% components.forEach(c => { %>
                      <li
                        class="list-group-item d-flex justify-content-between align-items-center"
                      >
                        <%= c.name %>
                        <div class="d-flex align-items-center">
                            <span
                            class="badge badge-<%= c.type == 'Earning' ? 'success' : 'danger' %> badge-pill"
                            ><%= c.type %></span
                            >
                            <form action="/payroll/component/delete/<%= c.component_id %>" method="POST" style="display:inline;" onsubmit="return confirm('Delete this component?');">
                                <button type="submit" class="btn btn-link btn-xs text-danger p-0 ml-2"><i class="fa fa-times"></i></button>
                            </form>
                        </div>
                      </li>
                      <% }) %>
                    </ul>
                  </div>
                </div>
              </div>

              <!-- Create Structure -->
              <div class="col-md-8">
                <div class="card">
                  <div class="card-header">
                    <h4 class="card-title">Salary Structures (Grades)</h4>
                  </div>
                  <div class="card-body">
                    <form
                      action="/payroll/structure/create"
                      method="POST"
                      class="mb-4"
                    >
                      <div class="row">
                        <div class="col-md-4">
                          <input
                            type="text"
                            class="form-control"
                            name="name"
                            placeholder="Structure Name (e.g Level 1)"
                            required
                          />
                        </div>
                        <div class="col-md-4">
                          <select class="form-control" name="frequency">
                            <option value="Monthly">Monthly</option>
                            <option value="Weekly">Weekly</option>
                          </select>
                        </div>
                        <div class="col-md-4">
                          <button
                            type="submit"
                            class="btn btn-success btn-block"
                          >
                            Create Structure
                          </button>
                        </div>
                      </div>
                    </form>

                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Frequency</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% structures.forEach(s => { %>
                        <tr>
                          <td><%= s.name %></td>
                          <td><%= s.frequency %></td>
                          <td>
                            <a
                              href="/payroll/structure/<%= s.structure_id %>"
                              class="btn btn-sm btn-info"
                              >Configure</a
                            >
                            <form action="/payroll/structure/delete/<%= s.structure_id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this structure?');">
                                <button type="submit" class="btn btn-sm btn-danger ml-1">Delete</button>
                            </form>
                          </td>
                        </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


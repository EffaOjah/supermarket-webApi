<!DOCTYPE html>
<html>
  <head>
    <title>Request Details - Sales Rep</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no"
      name="viewport"
    />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    />
    <link rel="stylesheet" href="/css/ready.css" />
    <link rel="stylesheet" href="/iziToast-master/dist/css/iziToast.min.css" />
  </head>
  <body>
    <div class="wrapper">
      <div class="main-panel" style="width: 100%">
        <div class="content">
          <div class="container-fluid">
            <div class="d-flex align-items-center mb-3">
              <a href="/sales-rep/dashboard" class="btn btn-secondary mr-3"
                >Back</a
              >
              <h4 class="page-title mb-0">Request #<%= request.id %></h4>
            </div>

            <div class="row">
              <div class="col-md-12">
                <div class="card">
                  <div class="card-header d-flex justify-content-between">
                    <div class="card-title">
                      Status:
                      <span
                        class="badge badge-<%= request.status === 'APPROVED' ? 'success' : (request.status === 'DECLINED' ? 'danger' : 'warning') %>"
                      >
                        <%= request.status %>
                      </span>
                    </div>
                    <div class="card-title">
                      Date: <%= new
                      Date(request.created_at).toLocaleDateString() %>
                    </div>
                  </div>
                  <div class="card-body">
                    <div class="table-responsive">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Total</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% request.items.forEach(item => { %>
                          <tr>
                            <td><%= item.product_name %></td>
                            <td><%= item.quantity %></td>
                            <td>₦<%= item.unit_price %></td>
                            <td>₦<%= item.total_price %></td>
                          </tr>
                          <% }) %>
                        </tbody>
                        <tfoot>
                          <tr>
                            <th colspan="3" class="text-right">Grand Total:</th>
                            <th>₦<%= request.total_amount %></th>
                          </tr>
                        </tfoot>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../partials/responseMessage') %>
    <script src="/js/core/jquery.3.2.1.min.js"></script>
    <script src="/js/core/bootstrap.min.js"></script>
    <script src="/iziToast-master/dist/js/iziToast.min.js"></script>
    <script src="/js/toast.js"></script>
  </body>
</html>

                                                    <th>Customer Phone No.</th>
                                                    <th>Total amount</th>
                                                    <th>Payment method</th>
                                                    <th>Sales Date</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% branchSales.forEach((sale, index) => { %>

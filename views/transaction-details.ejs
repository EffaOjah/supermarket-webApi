		<div class="main-panel">
			<div class="content">
				<div class="container-fluid">
					<div class="d-flex justify-content-between align-items-center mb-4 no-print">
						<h4 class="page-title mb-0"><i class="fa-solid fa-file-invoice"></i> <span class="text-primary">Transaction Details</span></h4>
						<div>
							<button onclick="window.print()" class="btn print-btn mr-2"><i class="fa-solid fa-print"></i> Print</button>
							<a href="/ledger/view" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Back to Ledger</a>
						</div>
					</div>

					<!-- Transaction Header -->
					<div class="row">
						<div class="col-md-12">
							<div class="card transaction-card">
								<div class="card-header">
									<div class="d-flex justify-content-between align-items-center">
										<div class="card-title mb-0"><i class="fa-solid fa-receipt"></i> Transaction Information</div>
										<% if (transaction.status === 'POSTED') { %>
											<span class="badge badge-posted badge-lg">Posted</span>
										<% } else if (transaction.status === 'DRAFT') { %>
											<span class="badge badge-draft badge-lg">Draft</span>
										<% } else { %>
											<span class="badge badge-void badge-lg">Void</span>
										<% } %>
									</div>
								</div>
								<div class="card-body">
									<div class="row">
										<div class="col-md-6">
											<div class="info-row">
												<div class="info-label">Transaction ID</div>
												<div class="info-value"><strong><%= transaction.transaction_id %></strong></div>
											</div>
											<div class="info-row">
												<div class="info-label">Transaction Date</div>
												<div class="info-value"><%= new Date(transaction.transaction_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></div>
											</div>
											<div class="info-row">
												<div class="info-label">Transaction Type</div>
												<div class="info-value"><%= transaction.transaction_type %></div>
											</div>
										</div>
										<div class="col-md-6">
											<div class="info-row">
												<div class="info-label">Reference Number</div>
												<div class="info-value"><%= transaction.reference_number || 'N/A' %></div>
											</div>
											<div class="info-row">
												<div class="info-label">Created By</div>
												<div class="info-value"><%= transaction.created_by || 'System' %></div>
											</div>
											<div class="info-row">
												<div class="info-label">Posted At</div>
												<div class="info-value"><%= transaction.posted_at ? new Date(transaction.posted_at).toLocaleString() : 'N/A' %></div>
											</div>
										</div>
									</div>
									<% if (transaction.description) { %>
										<div class="info-row mt-3">
											<div class="info-label">Description</div>
											<div class="info-value"><%= transaction.description %></div>
										</div>
									<% } %>
								</div>
							</div>
						</div>
					</div>

					<!-- Ledger Entries -->
					<div class="row">
						<div class="col-md-12">
							<div class="card transaction-card">
								<div class="card-header">
									<div class="card-title"><i class="fa-solid fa-list-check"></i> Ledger Entries</div>
								</div>
								<div class="card-body">
									<% if (transaction.entries && transaction.entries.length > 0) { %>
										<% 
										let totalDebits = 0;
										let totalCredits = 0;
										transaction.entries.forEach(entry => { %>
											<div class="entry-card <%= entry.entry_type.toLowerCase() %>">
												<div class="row align-items-center">
													<div class="col-md-1">
														<span class="entry-type-badge <%= entry.entry_type.toLowerCase() %>"><%= entry.entry_type %></span>
													</div>
													<div class="col-md-5">
														<div><strong><%= entry.account_code %></strong> - <%= entry.account_name %></div>
														<% if (entry.description) { %>
															<small class="text-muted"><%= entry.description %></small>
														<% } %>
													</div>
													<div class="col-md-3 text-center">
														<small class="text-muted">Entry Date</small><br>
														<strong><%= new Date(entry.entry_date).toLocaleDateString() %></strong>
													</div>
													<div class="col-md-3 text-right">
														<div style="font-size: 1.25rem; font-weight: 700;">
															₦<%= parseFloat(entry.amount).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
														</div>
													</div>
												</div>
											</div>
										<% 
											if (entry.entry_type === 'DEBIT') {
												totalDebits += parseFloat(entry.amount);
											} else {
												totalCredits += parseFloat(entry.amount);
											}
										}); %>

										<!-- Totals Section -->
										<div class="totals-section">
											<div class="total-item">
												<span><i class="fa-solid fa-arrow-up text-success"></i> Total Debits:</span>
												<strong class="text-success">₦<%= totalDebits.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></strong>
											</div>
											<div class="total-item">
												<span><i class="fa-solid fa-arrow-down text-danger"></i> Total Credits:</span>
												<strong class="text-danger">₦<%= totalCredits.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></strong>
											</div>
											<div class="total-item grand">
												<span><i class="fa-solid fa-balance-scale"></i> Difference:</span>
												<strong class="<%= Math.abs(totalDebits - totalCredits) < 0.01 ? 'text-success' : 'text-danger' %>">
													₦<%= Math.abs(totalDebits - totalCredits).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
												</strong>
											</div>
											<% if (Math.abs(totalDebits - totalCredits) < 0.01) { %>
												<div class="text-center mt-3">
													<span class="badge badge-success" style="font-size: 1rem; padding: 0.5rem 1rem;">
														<i class="fa-solid fa-check-circle"></i> Transaction Balanced
													</span>
												</div>
											<% } else { %>
												<div class="text-center mt-3">
													<span class="badge badge-danger" style="font-size: 1rem; padding: 0.5rem 1rem;">
														<i class="fa-solid fa-exclamation-triangle"></i> Transaction Unbalanced
													</span>
												</div>
											<% } %>
										</div>
									<% } else { %>
										<div class="text-center py-4">
											<i class="fa-solid fa-inbox" style="font-size: 3rem; opacity: 0.3;"></i>
											<p class="mt-3 text-muted">No entries found for this transaction.</p>
										</div>
									<% } %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

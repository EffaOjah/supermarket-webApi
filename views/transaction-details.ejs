	<style>
		.transaction-card { box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08); border-radius: 12px; border: none; margin-bottom: 1.5rem; }
		.card-header { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 12px 12px 0 0 !important; padding: 1.5rem; }
		.card-header .card-title { color: white; font-weight: 700; font-size: 1.25rem; margin: 0; }
		.info-row { padding: 0.75rem 0; border-bottom: 1px solid #e2e8f0; }
		.info-row:last-child { border-bottom: none; }
		.info-label { font-weight: 600; color: #4a5568; }
		.info-value { color: #2d3748; }
		.entry-card { background: #f8f9fa; padding: 1rem; margin-bottom: 0.75rem; border-radius: 8px; border-left: 4px solid #667eea; }
		.entry-card.debit { border-left-color: #48bb78; background: linear-gradient(135deg, #f0fff4 0%, #c6f6d5 100%); }
		.entry-card.credit { border-left-color: #f56565; background: linear-gradient(135deg, #fff5f5 0%, #fed7d7 100%); }
		.entry-type-badge { font-size: 0.875rem; font-weight: 700; padding: 0.25rem 0.75rem; border-radius: 20px; }
		.entry-type-badge.debit { background: #48bb78; color: white; }
		.entry-type-badge.credit { background: #f56565; color: white; }
		.totals-section { background: linear-gradient(135deg, #edf2f7 0%, #e2e8f0 100%); padding: 1.5rem; border-radius: 8px; margin-top: 1.5rem; }
		.total-item { display: flex; justify-content: space-between; padding: 0.5rem 0; font-size: 1.1rem; }
		.total-item.grand { font-weight: 700; font-size: 1.25rem; border-top: 2px solid #cbd5e0; padding-top: 1rem; margin-top: 0.5rem; }
		.badge-posted { background: linear-gradient(135deg, #48bb78 0%, #38a169 100%); }
		.badge-draft { background: linear-gradient(135deg, #ed8936 0%, #dd6b20 100%); }
		.badge-void { background: linear-gradient(135deg, #718096 0%, #4a5568 100%); }
		.print-btn { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; color: white; }
		@media print {
			.sidebar, .main-header, .print-btn, .no-print { display: none !important; }
			.main-panel { width: 100% !important; margin: 0 !important; }
		}
	</style>
</head>

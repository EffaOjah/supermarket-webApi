		<div class="main-panel">
			<div class="content">
				<div class="container-fluid">
					<h4 class="page-title"><span class="text-primary">Upload Product</span></h4>
					<div class="row justify-content-center">
						<div class="col-md-6">
							<div class="card">
								<form action="/admin/upload-product" method="POST">
									<div class="card-header">
										<div class="card-title">Fill in product details</div>
									</div>
									<div class="card-body">
										<!-- Product name -->
										<div class="form-group">
											<label for="productName">Product Name</label>
											<input type="text" class="form-control" id="productName" name="productName"
												placeholder="Enter product name" required>
										</div>
										<!-- Wholesale cost price -->
										<div class="form-group">
											<label for="wholesaleCostPrice">Wholesale Cost Price</label>
											<input type="number" class="form-control" id="wholesaleCostPrice"
												name="wholesaleCostPrice" placeholder="0.00">
										</div>
										<!-- Wholesale selling price -->
										<div class="form-group">
											<label for="wholesaleSellingPrice">Wholesale Selling Price</label>
											<input type="number" class="form-control" id="wholesaleSellingPrice"
												name="wholesaleSellingPrice" placeholder="0.00">
										</div>
										<!-- Retail cost price -->
										<div class="form-group">
											<label for="retailCostPrice">Retail Cost Price</label>
											<input type="number" class="form-control" id="retailCostPrice"
												name="retailCostPrice" placeholder="0.00">
										</div>
										<!-- Retail selling price -->
										<div class="form-group">
											<label for="retailSellingPrice">Retail Selling Price</label>
											<input type="number" class="form-control" id="retailSellingPrice"
												name="retailSellingPrice" placeholder="0.00">
										</div>
										<!-- Product category -->
										<div class="form-group">
											<label for="category">Category</label>
											<input type="text" class="form-control" id="category" name="category"
												placeholder="Enter Category" required>
										</div>
										<!-- Product supplier -->
										<div class="form-group">
											<label for="supplier">Select Supplier</label>
											<select class="form-control" id="supplier" name="supplierId" required>
												<option value="">Select Supplier</option>
												<% suppliers.forEach(supplier=> { %>
													<option value="<%= supplier.supplier_id %>">
														<%= supplier.name %>
													</option>
													<% }) %>
											</select>
										</div>
									</div>
									<div class="card-action">
										<button class="btn btn-success">Submit</button>
										<input class="btn btn-danger" type="reset">
									</div>
								</form>
							</div>
						</div>

		<div class="main-panel">
			<div class="content">
				<div class="container-fluid">
					<div class="d-flex justify-content-between align-items-center mb-4">
						<h4 class="page-title mb-0"><i class="fa-solid fa-book-open"></i> <span class="text-primary">General Ledger</span></h4>
						<a href="/ledger/add" class="btn btn-primary"><i class="fa-solid fa-plus"></i> New Entry</a>
					</div>
					<div class="filter-section">
						<form method="GET" action="/ledger/view">
							<div class="row">
								<div class="col-md-3">
									<div class="form-group">
										<label>Start Date</label>
										<input type="date" class="form-control" name="startDate" value="<%= filters.startDate || '' %>">
									</div>
								</div>
								<div class="col-md-3">
									<div class="form-group">
										<label>End Date</label>
										<input type="date" class="form-control" name="endDate" value="<%= filters.endDate || '' %>">
									</div>
								</div>
								<div class="col-md-3">
									<div class="form-group">
										<label>Transaction Type</label>
										<select class="form-control" name="transactionType">
											<option value="">All Types</option>
											<% transactionTypes.forEach(type => { %>
												<option value="<%= type.type_code %>" <%= filters.transactionType === type.type_code ? 'selected' : '' %>><%= type.type_name %></option>
											<% }); %>
										</select>
									</div>
								</div>
								<div class="col-md-3">
									<div class="form-group">
										<label>&nbsp;</label>
										<button type="submit" class="btn btn-primary btn-block"><i class="fa-solid fa-filter"></i> Filter</button>
									</div>
								</div>
							</div>
						</form>
					</div>
					<div class="row">
						<div class="col-md-12">
							<div class="card ledger-card">
								<div class="card-header">
									<div class="card-title text-white">
										<i class="fa-solid fa-list"></i> Transactions
										<% if (transactions && transactions.length > 0) { %><span class="badge badge-light ml-2"><%= transactions.length %></span><% } %>
									</div>
								</div>
								<div class="card-body p-0">
									<% if (transactions && transactions.length > 0) { %>
										<div class="table-responsive">
											<table class="table table-hover mb-0">
												<thead>
													<tr>
														<th>Date</th>
														<th>Transaction ID</th>
														<th>Type</th>
														<th>Reference</th>
														<th>Description</th>
														<th>Amount</th>
														<th>Status</th>
													</tr>
												</thead>
												<tbody>
													<% transactions.forEach(txn => { %>
														<tr class="transaction-row" onclick="window.location='/ledger/transaction/<%= txn.transaction_id %>'">
															<td><%= new Date(txn.transaction_date).toLocaleDateString() %></td>
															<td><strong><%= txn.transaction_id %></strong></td>
															<td><%= txn.type_name %></td>
															<td><%= txn.reference_number || '-' %></td>
															<td><%= txn.description || '-' %></td>
															<td class="text-right">₦<%= parseFloat(txn.total_amount).toLocaleString() %></td>
															<td>
																<% if (txn.status === 'POSTED') { %>
																	<span class="badge badge-posted">Posted</span>
																<% } else if (txn.status === 'DRAFT') { %>
																	<span class="badge badge-draft">Draft</span>
																<% } else { %>
																	<span class="badge badge-void">Void</span>
																<% } %>
															</td>
														</tr>
													<% }); %>
												</tbody>
											</table>
										</div>
									<% } else { %>
										<div class="text-center py-5">
											<i class="fa-solid fa-book-open" style="font-size: 4rem; opacity: 0.3;"></i>
											<h5 class="mt-3">No Transactions Found</h5>
											<p class="text-muted">Start by creating your first ledger entry.</p>
											<a href="/ledger/add" class="btn btn-primary mt-3"><i class="fa-solid fa-plus"></i> Add Entry</a>
										</div>
									<% } %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
